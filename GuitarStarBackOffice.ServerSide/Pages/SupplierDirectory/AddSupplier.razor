@using GuitarStarBackOffice.Shared
@layout MainLayout
@inject Radzen.DialogService dialogService

<RadzenContent Container="main">
    <ChildContent>
        <div class="row">
            <div class="col-md-12">
                <RadzenTemplateForm TItem="Supplier" Data="@newSupplier" Submit="@HandleAdd" EditContext="editContext">
                    <ChildContent>
                        <DataAnnotationsValidator />
                        <div style="margin-bottom: 1rem" class="flex-column">
                            <RadzenLabel Text="Название" style="width: 100%" />
                            <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@newSupplier.SupplierName" />
                            <ValidationMessage For="@(() => newSupplier.SupplierName)" />
                        </div>

                        <div style="margin-bottom: 1rem" class="flex-column">
                            <RadzenLabel Text="Представитель" style="width: 100%" />
                            <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@newSupplier.Representive" />
                            <ValidationMessage For="@(() => newSupplier.Representive)" />
                        </div>

                        <div style="margin-bottom: 1rem" class="flex-column">
                            <RadzenLabel Text="Номер телефона" style="width: 100%" />
                            <RadzenMask Mask="+*(***) ***-**-**" CharacterPattern="[0-9]" Placeholder="+7(000) 000-00-00"
                                        style="display: block; width: 100%" @bind-Value="@newSupplier.PhoneNumber" />
                            <ValidationMessage For="@(() => newSupplier.PhoneNumber)" />
                        </div>

                        <div style="margin-bottom: 1rem" class="flex-column">
                            <RadzenLabel Text="Адрес" style="width: 100%" />
                            <RadzenTextBox MaxLength="150" style="display: block; width: 100%" @bind-Value="@newSupplier.SupplierAddress" />
                            <ValidationMessage For="@(() => newSupplier.SupplierAddress)" />
                        </div>

                        <div class="row footer">
                            <RadzenButton ButtonType="Radzen.ButtonType.Submit" Disabled="@IsActive" Icon="save" ButtonStyle="ButtonStyle.Primary" Text="Сохранить">

                            </RadzenButton>
                        </div>
                    </ChildContent>
                </RadzenTemplateForm>
            </div>
        </div>
    </ChildContent>
</RadzenContent>

