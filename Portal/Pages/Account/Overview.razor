@page "/account/overview"
@using Portal.Shared.Common

@if (orders == null)
{
    <LoadingScreen />
}
else
{
    <section class="section-content padding-y bg">
    <div class="container">

        <div class="row">

            <AccountSidebar />

            <main class="col-md-9">

                <article class="card mb-3">
                    <div class="card-body">

                        <figure class="icontext">
                            <div class="text">
                                <strong> @firstName @lastName </strong>
                                <br />
                                @email
                                <br />
                                <a href="/account/settings">Изменить</a>
                            </div>
                        </figure>
                        <hr>
                        <p>
                            <i class="fa fa-map-marker text-muted"></i> &nbsp; Адрес доставки:
                            <br />
                            @client.ClientAddress? &nbsp;
                            <a href="/addresses" class="btn-link"> Изменить </a>
                        </p>

                        <article class="card-group">
                            <figure class="card bg">
                                <div class="p-3">
                                        <h5 class="card-title">@OrdersCount</h5>
                                    <span>Orders</span>
                                </div>
                            </figure>
                            <figure class="card bg">
                                <div class="p-3">
                                        <h5 class="card-title">@client.WishlistElements.Count()</h5>
                                    <span>Wishlists</span>
                                </div>
                            </figure>
                        </article>

                    </div>
                </article>

                <article class="card  mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Recent orders </h5>

                        <div class="row">

                             @foreach (var order in orders)
                            {
                            <div class="col-md-6">
                            <figure class="itemside  mb-3">

                            <div class="aside">
                            <a href="/order/details/@order.IdOrder">
                            <img src="https://pnevmo.ru/upload/medialibrary/0ed/shopping-cart.png" class="border img-sm">
                            </a>
                            </div>
                            <figcaption class="info">
                            <a href="/order/details/@order.IdOrder">
                            <time class="text-muted"><i class="fa fa-calendar-alt"></i> @order.OrderDate </time>
                            <p class="black"> Номер заказа @order.OrderNumber </p>
                            <span class="text-success">@order.orderStatus</span>
                            </a>
                            </figcaption>

                            </figure>
                            </div>
                            }

                        </div>

                        <a href="/orders/mine" class="btn btn-outline-primary"> See all orders  </a>
                    </div>
                </article>

            </main>
        </div>

    </div>
</section>
}
